<% action = (track.persisted? ? track_url(track) : album_tracks_url)  %>
<% method = (track.persisted? ? :put : :post) %>

<form action="<%= album_tracks_url %>" method="post">
	<input 
	  type="hidden"
		name="authenticity_token"
		value="<%= form_authenticity_token %>">
		
	<label for="track_album_id">Album Name</label>
	<select name="track[album_id]" id="track_album_id">
		<option></option>
		<% Album.all.each do |album| %>
		  <option <%= @track.album_id == album.id ? "selected" : "" %> 
				value="<%= album.id %>" ><%= album.name %></option>
		<% end %>
	</select>
	<br>
	
	<label for="track_title">Track Title</label>
	<input type="text" name="track[name]" id="track_title">
	<br>
	
	<label for="track_type">Track Type</label>
	<input type="text" name="track[track_type]" id="track_type">
	<br>
	
	<label for="track_lyrics">Track Lyrics</label>
	<textarea name="track[lyrics]" id="track_lyrics"></textarea>
	<br>
	
	<input type="submit" name="Create Track">
</form>