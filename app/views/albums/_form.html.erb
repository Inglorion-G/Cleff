<% action_url = (action == :new) ? band_albums_url : album(@album)  %>
<% method = (action == :new) ? "post" : "patch" %>

<form action="<%= action_url %>" method="<%= method %>">
	<input 
	  type="hidden"
		name="authenticity_token"
		value="<%= form_authenticity_token %>">
		
	<label for="album_band_id">Band Name</label>
	<select name="album[band_id]" id="album_band_id">
		<option></option>
		<% Band.all.each do |band| %>
		  <option <%= @album.band_id == band.id ? "selected" : "" %> 
				value="<%= band.id %>" ><%= band.name %></option>
		<% end %>
	</select>
	<br>
	
	<label for="album_title">Album Title</label>
	<input type="text" name="album[name]" id="album_title">
	<br>
	
	<label for="recording_type">Recording Type</label>
	<input type="text" name="album[recording_type]" id="recording_type">
	<br>
	
	
	<input type="submit" name="Create Album">
</form>